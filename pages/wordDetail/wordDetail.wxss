/* pages/wordDetail/wordDetail.wxss */

.container {
  background: #eaeaea;
}

.search {
  height: 7vh;
  background: #fff;
}

.search image {
  width: 70rpx;
  height: 70rpx;
  padding-top: 5rpx;
}

.search .dict {
  float: left;
  width: 60rpx;
  height: 60rpx;
  margin: 0px 26rpx 0px 52rpx;
}

.search .input {
  position: relative;
}

.search .input .btn {
  width: 550rpx;
  height: 35rpx;
  padding: 20rpx 40rpx 20rpx 70rpx;
  margin: 0 auto;
  font-size: 28rpx;
  border-radius: 38rpx;
  font-weight: 300;
  color: #000;
  background: #eaeaea;
}

.search .input image {
  position: absolute;
  left: 50rpx;
}

/* 收藏/分享字体图标 */
@font-face {
  font-family: 'iconfont';  /* project id 612306 */
  src: url('//at.alicdn.com/t/font_612306_ngwcx5fg63d9ggb9.eot');
  src: url('//at.alicdn.com/t/font_612306_ngwcx5fg63d9ggb9.eot?#iefix') format('embedded-opentype'),
  url('//at.alicdn.com/t/font_612306_ngwcx5fg63d9ggb9.woff') format('woff'),
  url('//at.alicdn.com/t/font_612306_ngwcx5fg63d9ggb9.ttf') format('truetype'),
  url('//at.alicdn.com/t/font_612306_ngwcx5fg63d9ggb9.svg#iconfont') format('svg');
}

.iconfont {
  font-family: "iconfont";
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
}

.wordDetail {
  overflow: hidden;
}

.wordTrans {
  padding: 20rpx 6% 0rpx;
  background: #fff;
}

.word-up {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 20rpx;
  border-bottom: 1px dashed #ccc;
}

.word-up .word-up--l {
  flex: 1;
}

.word-up text {
  margin-left: 15rpx;
  margin-right: 30rpx;
}

.word-down {
  margin-left: 15rpx;
  padding: 20rpx 0;
}

.word-title{
  font-size: 35rpx;
  font-weight: bold;
}

.word-des{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  text-align: justify;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.icon-favor::before {
  content: '\e64c';
  font-size: 40rpx;
  padding: 15rpx;
}

.icon-share::before {
  content: '\e628';
  font-size: 36rpx;
  padding: 15rpx;
}

.word-video {
  margin-top: 20rpx;
  padding: 20rpx 6% 0rpx;
  background: #fff;
}

.h1 {
  position: relative;
  padding-left: 30rpx;
  font-size: 34rpx;
}

.h1:before {
  position: absolute;
  content: "";
  width: 15rpx;
  height: 50rpx;
  left: 0rpx;
  background: #ff366d;
}

.video {
  padding: 30rpx 0;
}

.icon-video::before {
  content: '\e600';
  font-size: 56rpx;
  color: #ff366d;
}

.video text {
  width: 516rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  margin-left: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.word-gkk {
  margin-top: 20rpx;
  padding: 20rpx 0 0rpx;
  background: #fff;
}

.word-gkk .h1 {
  display: block;
  margin-left: 6%;
  margin-bottom: 30rpx;
}

.gkk-course {
  height: 48vh;
}

.gkk-course--item {
  width: 96%;
  margin: 0 auto;
  border-top: 1px solid #999;
}
.gkk-course--item:last-child {
  border-bottom: 1px solid #999;
}

.gkk-course--item-intro {
  width: 88%;
  display: flex;
  margin: 0 auto;
  padding: 30rpx 0;
  align-items: center;
}

.gkk-course--item-intro image {
  width: 200rpx;
  height: 150rpx;
}

.gkk-course--item_title {
  margin: 0 20rpx;
  width: 500rpx;
}

.gkk-course--item_title .h2 {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.gkk-course--item_title .h3 {
  font-size: 28rpx;
  color: #666;
}

.gkk-course--item_price {
  width: 80rpx;
  font-size: 28rpx;
  text-align: center;
  align-self: flex-start;
  border: 1px solid #ff3600;
  border-radius: 10rpx;
  color: #ff3600;
}

.icon-time {
  width: 88%;
  margin: 0 auto;
  font-size: 28rpx;
  line-height: 60rpx;
  border-top: 1px solid #999;
  color: #999;
}
.icon-time::before {
  content: '\e63b';
}


.video-list navigator{
  width: 100%;
  display: flex;  
}

.icon-share{
  background: none;
  border: none;
  padding-left: 0;
  padding-right: 0;
  margin: 0;
  border-radius: 0;
  float: right;
}

.icon-share::after{
  border: none;
}


.video-nothing{
  font-size: 30rpx;
}