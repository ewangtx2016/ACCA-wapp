/**index.wxss**/
page{
  background: #f3f3f3;
}
.container {
  width: 750rpx;
  height: 100vh;
  /* background: #f3f3f3; */
  overflow: hidden;
}

.con-btn {
  height: 80rpx;
  padding-top: 21rpx;
  padding-bottom: 21rpx;
  display: flex;
}
.input {
  position: relative;
  float: left;
  margin: 0 auto;
  padding: 0 20rpx;
  flex: 1;
  height: 80rpx;
}

.input .btn {
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 80rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
  font-weight: 300;
  border: 1px solid #c4c4c4;
  color: #c4c4c4;
  background: #fff;
}

.input image {
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  left: 30rpx;
  top: 10rpx;
}

.user-fav {
  position: relative;
  float: left;
  width: 82rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.user-fav .user-img {
  width: 82rpx;
  height: 82rpx;
  
}
.user-fav .user-img image{
  width: 100%;
  height: 100%;
  border-radius: 100%;
}
.user-fav .user-sc {
  position: absolute;
  width: 100%;
  font-size: 24rpx;
  text-align: center;
  bottom: -5rpx;
  background: #ff366d;
  color: #fff;
  border-radius: 30rpx;
}

.swiper {
  height: 30vh;
  background: #ccc;
}

.swiper image {
  width: 100%;
  height: 100%;
}

.zixun-logo {
  position: relative;
  height: 55vh;
}

.zixun {
  padding: 30rpx;
}

.zixun-title {
  position: relative;
  padding-left: 30rpx;
  font-size: 34rpx;
}

.zixun-title:before {
  position: absolute;
  content: "";
  width: 15rpx;
  height: 50rpx;
  left: 0rpx;
  background: #ff366d;
}

.zixun-content {
  height: 40vh;
  margin-top: 20rpx;
}

.zixun-content .zixun-content--item {
  display: flex;
  height: 180rpx;
  padding: 0 5%;
  align-items: center;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  border-radius: 8rpx;
  background: #fff;
}

.logo {
  position: absolute;
  width: 280rpx;
  height: 64rpx;
  bottom: -10rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
}

.logo image {
  width: 100%;
  height: 100%;
}
