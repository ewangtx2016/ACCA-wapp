.search {
  height: 7vh;
  box-shadow: 0px 2rpx 30rpx #e9e9e9;
  background: #fff;
}

.search image {
  width: 70rpx;
  height: 70rpx;
  /* padding-top: 5rpx; */
}

.search .input {
  position: relative;
  padding: 0 20rpx;
}

.search .input input {
  width: 560rpx;
  padding: 10rpx 70rpx 10rpx;
  font-size: 28rpx;
  border-radius: 38rpx;
  font-weight: 300;
  color: #ccc;
  background: #ededed;
}

.search .input image {
  position: absolute;
  left: 30rpx;
}

.search .input .cancle {
  width: 60rpx;
  height: 60rpx;
  left: 650rpx;
  top: 5rpx;
  z-index: 1;
}

.wordlist {
  padding: 20rpx 0;
}

.item {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: flex-start;
  width: 90%;
  margin-left: 5%;
  padding: 15rpx 0px 20rpx 15rpx;
  border-bottom: 1rpx solid #dcdcdc;
}

