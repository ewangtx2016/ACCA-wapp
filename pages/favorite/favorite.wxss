/* pages/favorite/favorite.wxss */

@font-face {
  font-family: 'iconfont'; /* project id 612306 */
  src: url('//at.alicdn.com/t/font_612306_ngwcx5fg63d9ggb9.eot');
  src: url('//at.alicdn.com/t/font_612306_ngwcx5fg63d9ggb9.eot?#iefix') format('embedded-opentype'),
         url('//at.alicdn.com/t/font_612306_ngwcx5fg63d9ggb9.woff') format('woff'),
         url('//at.alicdn.com/t/font_612306_ngwcx5fg63d9ggb9.ttf') format('truetype'),
         url('//at.alicdn.com/t/font_612306_ngwcx5fg63d9ggb9.svg#iconfont') format('svg');
}

.iconfont {
  font-family: "iconfont";
  font-style: normal;
  font-size: 30rpx;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
}

.container {
  padding-top: 3vh;
  background: #eaeaea;
}
.favorite {
  width: 100%;
  height: 97vh;
  background: #fff;
}

.favorite-item {
  display: flex;
  width: 94%;
  margin: 0 auto 0;
  line-height: 80rpx;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
}

.icon-favor {
  padding-left: 25rpx;
}
.icon-favor::before {
  content: '\e60c';
  position: relative;
  left: -20rpx;
  font-size: 40rpx;
  color: #ff366d;
}

.icon-right::before {
  content: '\e618';
}
