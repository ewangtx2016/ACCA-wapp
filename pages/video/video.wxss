/* pages/video/video.wxss */

.container {
  background: #eaeaea;
}

.video {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.video-src {
  position: relative;
  display: block;
  width: 100%;
}
.video-menu {
  position: absolute;
  width: 16rpx;
  height: 16rpx;
  padding: 30rpx 20rpx;
  top: 20rpx;
  right: 2%;
  z-index: 99;
}
.video-menu- {
  position: relative;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #fff;
}
.video-menu-::before,
.video-menu-::after {
  content: '';
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  left: 3rpx;
  border-radius: 6rpx;
  background: #fff;
}
.video-menu-::before {
  top: 24rpx;
}
.video-menu-::after {
  bottom: 24rpx;
}
.video-menu--c {
  position: absolute;
  width: 100rpx;
  right: 60rpx;
  top: 15rpx;
  font-size: 30rpx;
  text-align: center;
  color: #fff;
  background: rgba(255, 255, 255, .3);
  z-index: 999;
}
.video-menu--c text {
  display: block;
  line-height: 50rpx;
}

.video-intro {
  padding: 3%;
  background: #fff;
}

.video-intro text {
  display: block;
}

.video-intro text.h2{
  font-size: 30rpx;
  margin: 20rpx 0;
}

.cfa {
  margin-top: 26rpx;
  padding: 20rpx 4% 20rpx;
  background: #fff;
}

.h3 {
  position: relative;
  padding-left: 30rpx;
  padding-bottom: 30rpx;
  font-size: 34rpx;
}

.h3:before {
  position: absolute;
  content: "";
  width: 15rpx;
  height: 50rpx;
  left: 0rpx;
  background: #ff366d;
}

.cfa-content {
  overflow: hidden;
}

.cfa-content>view {
  display: flex;
  align-items: center;
  margin: 20rpx 20rpx 20rpx 0;
  background: #fff;
}

.cfa-list-item{
  border-bottom: 1px dashed #ccc;
  padding-bottom: 20rpx;
  display: flex;
  margin-bottom: 20rpx;
}



.cfa-list-item .cfa-course{
  flex: 1;
}

.cfa-content image {
  width: 260rpx;
  height: 160rpx;
  padding-right: 40rpx;
}

.cfa-course text {
  display: block;
}

.cfa-course--title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff366d;
}

.cfa-course--intro {
  font-size: 28rpx;
  margin-top: 15rpx;
  color: #666;
}

.comment {
  padding: 30rpx;
  margin-top: 30rpx;
  background: #fff;
}

.comment-who {
  display: flex;
  padding: 24rpx;
  border-top: 1px solid #333;
}
.userImg {
  width: 100rpx;
  height: 80rpx;
  margin-right: 26rpx;
  border-radius: 50%;
  overflow: hidden;
}
.userImg image {
  display: block;
  width: 100%;
  height: 100%;
}
.userAAA {
  display: flex;
  font-size: 28rpx;
  color: #999;
}
.userComment {
  font-size: 28rpx;
  margin-top: 16rpx;
  line-height: 50rpx;
  color: #aaa;
}

.comment-send {
  display: flex;
  width: 88%;
  margin: 30rpx auto 0;
  padding-bottom: 20rpx;
  align-items: center;
  justify-content: space-between;
  overflow: hidden;
}
.comment-cen {
  width: 580rpx;
  box-sizing: border-box;
  min-height: 50rpx;
  padding: 10rpx 16rpx;
  font-size: 28rpx;
  background: #fff;
  border-radius: 10rpx;
}
.comment-sen {
  font-size: 28rpx;
}